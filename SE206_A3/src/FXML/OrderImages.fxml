         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#returnToSelectImages" text="Back">
               <HBox.margin>
                  <Insets right="400.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="nextButton" alignment="BOTTOM_RIGHT" layoutX="30.0" layoutY="48.0" mnemonicParsing="false" onAction="#renameImages" text="Next" />
         </children>
      </HBox>
   </children>
</VBox>
